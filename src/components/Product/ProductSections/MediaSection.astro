---
export interface Props {
    videoUrl: string;
}

const { videoUrl } = Astro.props as Props;
---

<div class="product-media">
    <h2>Demo</h2>
    <iframe
        width="560"
        height="315"
        src={videoUrl}
        title="YouTube video player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen></iframe>
</div>

<style>
    .product-media {
        margin-top: 2rem;
        text-align: center;
    }

    .product-media iframe {
        margin-top: 1rem;
        width: 100%;
        max-width: 560px;
        height: 315px;
    }
</style>
